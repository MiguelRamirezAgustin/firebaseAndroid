<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivy"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Home">


    <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Nombre">

    <EditText
        android:id="@+id/Edit_PersonaNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos">

        <EditText
            android:id="@+id/Edit_PersonaApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo">

        <EditText
            android:id="@+id/Edit_PersonaCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ContraseÃ±a">

        <EditText
            android:id="@+id/Edit_PersonaContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:ems="10"
            android:inputType="textPassword"
            />

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Personas"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"/>


    <ListView
        android:id="@+id/List_datosPerson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>